<%- include('partials/header'); -%>
<div class="container">
    <% if (tasks.length==0) { %>
        <div class="row my-3">
            <div class="col-sm-10 mx-auto text-center">
                <div class="card alert-warning">
                    <div class="card-body">
                        <h1>no hay elementos</h1>
                    </div>
                </div>
            </div>
        </div>
        
    <% } %>
    <div class="row">
        <% tasks.forEach(function(task,indice){%>
        <div class="col-sm-10 mx-auto text-center mb-3">
            <div class="card">
                <div class="card-header"><%= task.title %></div>
                <div class="card-body"><%= task.description %></div>
                <a href="/delete/<%= indice %>" class="btn btn-warning">Borrar</a>
            </div>
        </div>
        <%})%>
    </div>
</div>

<%- include('partials/footer'); -%>